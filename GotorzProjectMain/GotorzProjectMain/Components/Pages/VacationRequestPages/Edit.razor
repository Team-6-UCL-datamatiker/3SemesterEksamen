    protected override async Task OnInitializedAsync()
    {
        try
        {
            VacationRequest ??= await DbContext.VacationRequests.FirstOrDefaultAsync(m => m.VacationRequestId == Int32.Parse(Id));

            if (VacationRequest is null)
            {
                NavigationManager.NavigateTo("notfound");
                return;
            }
            InputModel = Mapper.Map<EditVacationRequestInputModel>(VacationRequest);
            customer = await ExtendedUserService.GetCustomerByIdAsync(VacationRequest.UserId);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading vacation request: {ex.Message}");
            NavigationManager.NavigateTo("error");
        }
    }

