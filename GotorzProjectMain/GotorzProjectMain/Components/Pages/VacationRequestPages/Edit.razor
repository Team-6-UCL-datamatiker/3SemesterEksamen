                    <InputText id="country" @bind-Value="VacationRequest.Country" class="form-control" />
                    <ValidationMessage For="() => VacationRequest.Country" class="text-danger" />
                </div> *@
                <div class="mb-3">
                    <label for="startdate" class="form-label">StartDate:</label>
                    <InputDate id="startdate" @bind-Value="InputModel.StartDate" class="form-control" />
                    <ValidationMessage For="() => InputModel.StartDate" class="text-danger" />
